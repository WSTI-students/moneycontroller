<h1>Expenses</h1>

<table>
  <thead>
  <tr>
    <th>Date</th>
    <th>Title</th>
    <th>Value</th>
    <th>Category</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @expense.each do |expense| %>
    <tr>
      <td><%= format_date(expense.created_at)%></td>
      <td><%= expense.title %></td>
      <td><%= expense.value %></td>
      <td><%= expense.category.title %></td>
      <td><%= link_to 'Show', expense %></td>
      <td><%= link_to 'Edit', edit_expense_path(expense) %></td>
      <td><%= link_to 'Destroy', expense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Expense', new_expense_path %>